{%  stylesheet %}

          section.onze-gebruikers-2 {
            font-family: Aller, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #fff;
        }

        /* Grijze container */
        .testimonial-container {
            position: relative;
            width: 1200px;
            height: 623px;
            background-color: #efefef;
            display: flex;
            flex-direction: column;
            justify-content: top;
            align-items: center;
            border-radius: 40px;
            padding: 20px;
            box-sizing: border-box;
        }

        .swiper {
            width: 1045px;
            height: 300px;
        }

        .swiper-slide {
            background-color: #fff;
            border-radius: 20px;
            padding: 20px;
            display: flex;
            flex-direction: row;
            box-sizing: border-box;
            gap: 40px;
        }

        .swiper-pagination {
            position: absolute;
            bottom: 30px !important;
        }

        .swiper-button-next {
            position: absolute;
            right: 30px !important;
            color: #000;
        }

        .swiper-button-prev {
            position: absolute;
            left: 30px !important;
            color: #000;
        }

        @media screen and (max-width: 1000px) {
          section.onze-gebruikers-2 {
            height: 900px !important;
          }
          
          .testimonial-container {
            width: 100% !important;
            height: auto;
          }

          .testimonial-container h1 {
            font-size: 30px !important;
          }

          .swiper {
            width: 100% !important;
            height: auto !important;
          }

          .swiper-slide {
            width: 100% !important;
            height: auto !important;
            flex-direction: column !important;
            justify-content: center !important;
          }

          .s-cta-box {
            flex-direction: column !important;
            margin: 20px auto !important;
          }
        }
  
  {%  endstylesheet %}

