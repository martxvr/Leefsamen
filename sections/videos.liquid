{% stylesheet %}

  body {
  overflow-x: hidden; /* Disable horizontal scrolling */
}

      ls-video-main {
        display: block;
        margin: auto;
        width: 1100px;
        margin-top: 20px;
      }

       video-header {
            background-color: #fff;
            color: #4f4f4f;
            text-align: center;
            padding: 20px;
            max-width: 1200px;
            width: 70%;
            margin: auto;
        }

      video-header h1 {
        font-weight: 700;
      }

        video-main {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
        }

        .video-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .video {
            width: calc(25% - 20px);
            margin-bottom: 20px;
        }

        .video p {
          text-align: center;
          color: #4f4f4f;
          font-weight: 700;
        }

        iframe.videoiframe{
            border-radius: 14px;
            transition: transform 0.3s ease;
            transform: scale(1.00) !important;
          }

        iframe.videoiframe:hover {
          transform: scale(1.08) !important;
          transition: transform 0.3s ease;
        }

        .video img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .image1 {
              position: relative;
              top: 145px;
              right: 202px;
              z-index: -1;
              margin-top: -300px;
              transform: scale(0.8) rotate(-8deg);
              }

        .image2 {
              position: relative;
              top: 147px;
              left: 900px;
              z-index: -1;
              margin-top: -300px;
              transform: scale(0.8) rotate(15deg);
        }

         .image3 {
              position: relative;
              top: 310px;
              right: 701px;
              z-index: -2;
              margin-top: -300px;
              transform: scale(.6) rotate(15deg);
              filter: blur(13px);
          }

        .image4 {
              position: relative;
              top: 245px;
              left: 644px;
              z-index: -2;
              margin-top: -300px;
              transform: scale(0.80) rotate(-15deg);
              filter: blur(13px);
          }

        @media only screen and (max-width: 1200px) {
            .video {
                width: 100%;
            }

            iframe {
              width: 100%;
              margin: auto;
            }

            .image1, .image2, .image3, .image4{
              display: none
            }

            ls-video-main {
              display: flex;
              flex-direction: column;
              margin: 0;
              width: 100%;
            }

            video-header {
            width: 100%;
            }
        }
{% endstylesheet %}

<ls-video-main>

