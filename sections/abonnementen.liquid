{% endschema %}

{% stylesheet %}

.pricing-abonnement {
    margin: auto;
    display: flex;
    max-width: 1440px;
    padding: 0px 128px 72px 128px;
    flex-direction: column;
    align-items: center;
    gap: 64px;
    border-radius: 4px;
    background: var(--Shades-White, #FFF);
}

.title {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 64px;
}

.frame80 {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    align-self: stretch;
}

.frame80 h3 {
    margin: 0 0 15px 0;
    width: 566px;
    color: var(--Neutral-800, #191D23) !important;
    text-align: center;
    font-family: DM Sans;
    font-size: 50px !important;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
}

.frame80 p {
    margin: 0 0;
    color: var(--Neutral-800, #191D23);
    text-align: center;
    font-family: DM Sans;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.abonnementen {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 24px;
    align-self: stretch;
    justify-content: center;
}

.free {
    display: flex;
    padding: 40px 24px;
    border-radius: 12px;
    flex-direction: column;
    align-items: flex-start;
    max-width: 383px;
    gap: 40px;
    flex: 1 0 0;
    align-self: stretch;
    border-radius: 4px;
    background: var(--Shades-White, #FFF);
    transition: background 0.5s ease;
}

#standaard-abonnement {
    background: #1A94A6;
    border-radius: 12px;
    box-shadow: 0px 10px 25px 0px #CCD9FF;
    transition: background 0.5s ease;
}

#standaard-title {
    color: #fff;
}

#standaard-p {
    color: #fff;
}

#standaard-currencyprice {
    color: #fff;
}

#standaard-priceandbutton-p {
    color: #fff;
}

#standaard-bottom p {
    color: #fff;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
    align-self: stretch;
}

.plans-header {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 11px;
    align-self: stretch;
}

.plans-header h4 {
    margin: 0 0;
    align-self: stretch;
    color: var(--Neutral-800, #191D23);
    font-family: Aller;
    font-size: 22px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
}

.plans-header p {
    margin: 0 0;
    align-self: stretch;
    color: var(--Neutral-500, #64748B);
    font-family: Aller;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.priceandbutton {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0px !imporant;
    align-self: stretch;
}

.price {
    display: flex;
    align-items: center;
    gap: 4px;
    align-self: stretch;
}

.price .currencyprice {
    margin: 0 0;
    color: var(--Neutral-800, #191D23);
    font-family: Aller;
    font-size: 56px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
}

.price p {
    color: var(--Neutral-800, #191D23);
    font-family: Aller;
    font-size: 15px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.cta {
  display: flex;
  height: 44px;
  padding: 0px 12px;
  justify-content: center;
  align-items: center;
  gap: 4px;
  align-self: stretch;
  border-radius: 12px;
  border: 1.5px solid #ff9756;
  background: #e96411;
  transform: scale(1.00);
  transition: box-shadow 0.5s ease, transform 0.5s;
}

.cta:hover {
  box-shadow: 0px 10px 25px 0px #CCD9FF;
  transform: scale(1.05);
  transition: box-shadow 0.5s ease, transform 0.5s;
}
  
  #standaard-abonnement .cta:hover {
    box-shadow: 0px 10px 25px 0px #0A6C7B;
    transform: scale(1.05);
    transition: box-shadow 0.5s ease, transform 0.5s;
  }

.frame81 {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
}

.frame81 a {
    padding: 10px 105px;
    color: #fff;
    text-align: center;
    font-feature-settings: 'clig' off, 'liga' off;
    font-family: Aller;
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    text-decoration: none;
}

.bottom {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    align-self: stretch;
}

.feature {
    display: flex;
    align-items: center;
    gap: 17px;
    align-self: stretch;
}

.frame74 {
    display: flex;
    padding: 8px;
    align-items: flex-start;
    gap: 8px;
    border-radius: 100px;
    background: var(--Primary-Blue-50, #E8EDFB);
}

.frame74.icon {
    width: 16px;
    height: 16px;
}

.feature p {
    margin: 10px 0;
    flex: 1 0 0;
    color: var(--Neutral-800, #191D23);
    font-family: Aller;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
}

.frame75 {
    display: flex;
    padding: 8px;
    align-items: flex-start;
    gap: 8px;
    border-radius: 100px;
    background: var(--Neutral-50, #F7F8F9);
}

.frame75.icon {
    width: 16px;
    height: 16px;
}

.frame82 {
    width: 173px;
    height: 61px;
    position: absolute;
    left: 99.333px;
    top: -33px;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}

.rectangle1 {
    width: 173px;
    height: 61px;
    flex-shrink: 0;
    fill: #F5721D;
}

.frame82 p {
    color: #FFF;
    font-family: Aller;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
}



