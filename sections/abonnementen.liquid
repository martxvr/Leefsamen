{% schema %}
{
  "name": "Abonnementen",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "basis",
      "label": "Basis abonnement prijs:",
      "default": "€8,50"
    },
    {
      "type": "text",
      "id": "plus",
      "label": "Plus abonnement prijs:",
      "default": "€17,50"
    },
    {
      "type": "text",
