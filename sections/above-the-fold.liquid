{% schema %}
{
  "name": "Above The Fold",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Snel hulp bij iedere noodsituatie in huis"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Description",
      "default": "Binnen een paar seconden krijgen familie, buren of bekenden een alarm en komen helpen. Wel zo’n gerust gevoel."
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button",
      "default": "Bekijk pakketten"
    },
    {
      "type": "text",
      "id": "button-container-text",
      "label": "Text naast/onder button",
      "default": "Geldt voor Basis & Plus"
    },
    {
      "type": "text",
      "id": "quote",
      "label": "Quote",
      "default": "Probeer het uit!"
    }
  ],
  "presets": [
    {
      "name": "Above The Fold",
      "category": "Text"
    }
  ]
}
{% endschema %}

{%  stylesheet %}
.above-the-fold {
    display: flex;
    flex-direction: column;
    gap: 40px;
    padding: 20px; 
    background-color: #fff;
    max-width: 1200px;
    justify-content: center;
    margin: 0 auto;
    margin-bottom: 60px;
}

  @media screen and (max-width: 1000px) {
    .above-the-fold {
      margin-bottom: 0px;
    }
  }

.heading-p h1 {
    font-size: 45px;
    font-weight: bold;
    margin-bottom: 20px;
}

.atf-container-2 h4 {
    font-size: 24px;
    font-weight: 600;
    margin: 0px;
}


.atf-container-2 ul li {
    list-style-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23000000"><path d="M9 19c-.26 0-.51-.1-.71-.29l-6-6A.996.996 0 1 1 3.7 11.3l5.29 5.29L20.28 5.3a.996.996 0 1 1 1.41 1.41l-12 12c-.2.2-.45.29-.71.29Z"></path></svg>');
}

.atf-container-2 ul li::marker {
    font-size: 2.0em;
}

.atf-container-2 ul {
  padding: 0px;
}
.atf-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 80px;
}

.atf-container-1 {
    display: flex;
    flex-direction: column;
    gap: 20px;
    width: 50%;
}

.atf-container-1 img {
      border-radius: 8px;
    }

.atf-container-2 {
    display: flex;
    flex-direction: column;
    gap: 20px;
    width: 50%;
}

.leefsamen-btn {
    position: relative;
      appearance: none;
      display: inline-flex;
      -webkit-box-align: center;
      align-items: center;
      -webkit-box-pack: center;
      justify-content: center;
      text-align: center;
      text-decoration: none;
      border: 0px;
      transform: 0;
      transition: background-color 0.18s ease-in-out 0s, box-shadow 0.18s ease 0s, border-color 0.18s ease-in-out 0s, color 0.18s ease-in-out 0s, opacity 0.18s ease-in-out 0s, transform 0.5s ease 0s;
      overflow: hidden;
      user-select: none;
      font-weight: bold;
      outline: none;
      border-radius: 8px;
      padding: 20px 56px;
      font-size: 18px;
      line-height: 22px;
      background-color: #e96411;
      color: #fff;
      width: 100%;
  }


  .leefsamen-btn:hover {
    box-shadow: none !important;
    transform: scale(1.05);
    transition: background-color 0.18s ease-in-out 0s, box-shadow 0.18s ease 0s, border-color 0.18s ease-in-out 0s, color 0.18s ease-in-out 0s, opacity 0.18s ease-in-out 0s, transform 0.5s ease 0s;
 }

  @media screen and (max-width: 1000px) {
    .atf-container {
        flex-direction: column;
    }

    .atf-container-1 {
        width: 100% !important;
        gap: 10px;
    }

    .atf-container-1 img {
      width: 100%;
      height: auto;
    }

    .atf-container-2 {
        width: 100%;
        gap: 0px;
    }

    .atf-container-2 ul {
        padding: 20px !important;
        margin: 0px;
    }

    .atf-container-2 a.leefsamen-btn {
      margin-bottom: 20px !important;
    }

    .heading-p h1 {
      font-size: 32px;
    }

    .above-cta-box {
      flex-direction: column !important;
    }
 }
  {%  endstylesheet %}

