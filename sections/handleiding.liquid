{% schema %}
{
  "name": "Handleiding",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Handleiding / uitleg"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Klik op de knop om onze handleiding te downloaden."
    },
    {
      "type": "text",
      "id": "buttonhandleiding",
      "label": "Button Text",
      "default": "Downloaden"
    }
  ],
  "presets": [
    {
      "name": "Handleiding",
      "category": "Text"
    }
  ]
}
{% endschema %}

{% stylesheet %}



   .container-handleiding {
      position: relative;
      width: 60%;
      height: 400px;
      margin: 100px auto;
      display: flex;
      background-color: #1a94a6;
      border-radius: 25px;
      box-shadow: 0 10px 25px #ccd9ff;
      max-width: 800px;

    }

    .text-container {
      width: 50%;
      padding: 20px 20px 20px 60px;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      justify-content: center;
      color: #fff;
    }

    .text-container img {
        position: absolute;
        top: 60px;
    }

    .text-container h2 {
        color: #fff;
      margin-bottom: 10px;
      font-size: 32px;
      font-weight: 900;
    }

    .text-container p {
      margin-bottom: 20px;
      color: #fff;
    }

    .button-container-handleiding {
      display: flex;
      align-items: center;
    }

    .iframe-container {
      width: 50%;
      margin: auto;
      height: 100%;
    }

    iframe {
        width: 100%;
        margin: auto;
        transform: scale(0.8);
        border-radius: 25px;
    }

    .leefsamen-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 25px #0A6C7B !important;
        transition: transform 0.5s, box-shadow 0.5s;
    }

    @media only screen and (max-width: 786px) {

       .section-handleiding {
          margin-bottom: 40px;
      }
      
        .container-handleiding {
        display: flex;
        flex-direction: column;
        margin: auto;
        margin-top: 20px;
        width: 90%;
        height: auto;
        max-width: 1200px;

    }

    .text-container {
        margin: auto;
        margin-top: 70px;
        margin-bottom: 20px;
        width: 80%;
        padding: 0;
    }

    .text-container h2 {
        font-size: 28px;
    }

    .text-container p {
        font-size: 18px;
    }

    .text-container img {
        position: absolute;
        top: 40px;
    }

    .iframe-container {
      width: 100%;
      margin: auto;
      height: 100%;
    }

    iframe {
      height: 220px;
    }

      .button-handleiding {
        margin: auto;
        position: relative;
        bottom: 0;
      }

    }
  
{% endstylesheet %}

  <div class="section-handleiding scroll-trigger animate--slide-in">
  <div class="container-handleiding">
<div class="text-container">
<h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
      <div class="button-container-handleiding">
        <a href="https://cdn.shopify.com/s/files/1/0788/1821/4221/files/Handleiding_Leefsamen_uitleg_alarmering_26_juni_2024.pdf?v=1720099673" class="leefsamen-btn" target="_blank" rel="noopener noreferrer">{{ section.settings.buttonhandleiding }}</a>
      </div>
    </div>
    <div class="iframe-container">
      <iframe width="100%" height="100%" src="https://www.youtube.com/embed/Nt8r-NPy_XQ?si=Lwz5wYr_NJTne35N" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
  </div>
