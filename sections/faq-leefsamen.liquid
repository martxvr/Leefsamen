{%  stylesheet %}
        .faq-container h1 {
            text-align: center;
            font-size: 32px;
            font-weight: 700;
            color: #2E2A39;
        }

        .faq-container {
        max-width: 1200px;
        margin: 0 auto;
        }

        .faq-category {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .category {
            width: calc(33.33% - 40px); /* Bereken de breedte voor 3 naast elkaar met marges */
            margin: 20px 20px 20px 20px;
            background-color: #fff;
            border-radius: 25px;
            padding: 20px 20px 20px 20px;
            box-shadow: 0em 0em 2em 0em rgba(0,0,0,0.05);
        }

        @media only screen and (max-width: 800px) {
            .category {
                width: 100%; /* Volledige breedte op kleinere schermen */
            }
        }

        .category h2 {
            color: #2E2A39;
        }

        .question {
        cursor: pointer;
        border: 1px solid #1a94a6;
        border-radius: 12px;
        padding: 10px;
        margin: 5px 0;
        background-color: #fff;
        transition: background-color, color, margin, 0.5s ease;
        }

        .question.active,
        .question:hover {
            background-color: #1a94a6;
            color: #fff;
            border-radius: 12px;
            transition: background-color, margin, 0.5s ease;
        }

        .question.active {
            margin: 20px 0px;
            box-shadow: 0 10px 25px #ccd9ff;
        }

        .answer {
        max-height: 0;
        overflow: hidden;
        transition: max-height, 0.5s ease-in-out;
        color: #fff;
        }

        .answer.active {
        margin-top: 20px;
        max-height: 1000px; /* Stel hier een geschikte waarde in op basis van je content */
        transition: max-height, margin-top, 0.5s ease-in-out;
        border-top: 1px solid #fff;
        padding-top: 10px;
        }

        #search {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 12px;
            margin-bottom: 40px;
        }

         .search-container {
            max-width: 600px;
            margin: 0 auto;
        }


   @media only screen and (max-width: 800px) {
            .search-container {
                width: 80%;
                margin: auto;
                justify-content: center;
        }
        }

